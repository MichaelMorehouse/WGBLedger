@model WGBLedger.Models.TransactionHistoryViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { acctId = Model.BankAccount.Id })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Transactions.SingleOrDefault().Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Transactions.SingleOrDefault().Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Transactions.SingleOrDefault().Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Transactions.SingleOrDefault().TransactionType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Transactions.SingleOrDefault().TransactionMethod)
        </th>
        <th>
            Balance
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Transactions) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TransactionType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TransactionMethod)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PreviousBalance)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
