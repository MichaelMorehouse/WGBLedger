@model IEnumerable<WGBLedger.Models.BankAccount>

@{
    ViewBag.Title = "Index";
}

<h2>Accounts</h2>

<p>
    @Html.ActionLink("New Account", "Create")
</p>
<table class="table table-striped table-border">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Balance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id).ToString().Substring(0, 7)<span>-...</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountType)
                </td>
                <td>
                    <div class="btn-group mr-2" role="group" aria-label="Option buttons">
                        <button type="button" class="btn btn-secondary">
                            @Html.ActionLink("New Transaction", "Create", "Transaction", new { acctId = item.Id }, "")
                        </button>
                        <button type="button" class="btn btn-secondary">
                            @Html.ActionLink("History", "Index", "Transaction", new { acctId = item.Id }, "")
                        </button>
                        <button type="button" class="btn btn-secondary">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        </button>
                        <button type="button" class="btn btn-secondary">
                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                        </button>
                        <button type="button" class="btn btn-secondary">
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </button>
                    </div>
                </td>
                <td>
                    @Html.ActionLink("New Transaction", "Create", "Transaction", new { acctId = item.Id }, "") |
                    @Html.ActionLink("History", "Index", "Transaction", new { acctId = item.Id }, "") |
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
