@model IEnumerable<WGBLedger.Models.BankAccount>

@{
    ViewBag.Title = "Account Overview";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New Account", "Create","", new { @class = "btn btn-default", role = "button" })
</p>
<table class="table table-striped table-border">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Balance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountType)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id).ToString().Substring(0, 7)<span>-...</span>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountType)
            </td>

            <td>
                @Html.ActionLink("Create New Transaction", "Create", "Transaction", new { acctId = item.Id }, new { @class = "btn btn-default", role = "button" })
                @Html.ActionLink("Transaction History", "Index", "Transaction", new { acctId = item.Id }, new { @class = "btn btn-default", role = "button" })
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default", role = "button" })
            </td>
        </tr>
    }
</table>
